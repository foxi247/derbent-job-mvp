generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  EXECUTOR
  EMPLOYER
}

enum City {
  DERBENT
}

enum PriceType {
  PER_SQM
  PER_HOUR
  FIXED
  NEGOTIABLE
}

enum PayType {
  PER_HOUR
  FIXED
  NEGOTIABLE
}

enum Currency {
  RUB
}

enum ListingStatus {
  ACTIVE
  PAUSED
}

enum JobPostStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

enum ContactTargetType {
  LISTING_EXECUTOR
  JOB_POST
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(EMPLOYER)
  createdAt     DateTime  @default(now())

  accounts         Account[]
  sessions         Session[]
  profile          Profile?
  listings         Listing[]
  jobPosts         JobPost[]
  reviewsReceived  Review[]      @relation("ExecutorReviews")
  reviewsGiven     Review[]      @relation("EmployerReviews")
  contactViews     ContactView[]

  @@index([role])
}

model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique
  city            City     @default(DERBENT)
  about           String   @default("")
  experienceYears Int      @default(0)
  skills          String[]
  availability    String   @default("По договоренности")
  phone           String?
  isOnline        Boolean  @default(false)
  urgentToday     Boolean  @default(false)
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Listing {
  id          String        @id @default(cuid())
  userId      String
  title       String
  category    String
  description String
  priceType   PriceType
  priceValue  Decimal?
  currency    Currency      @default(RUB)
  status      ListingStatus @default(ACTIVE)
  city        City          @default(DERBENT)
  district    String?
  expiresAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  promotions  ListingPromotion[]
  messages    Message[]
  contactViews ContactView[]

  @@index([category])
  @@index([status])
  @@index([updatedAt])
  @@index([expiresAt])
}

model JobPost {
  id          String        @id @default(cuid())
  userId      String
  title       String
  category    String
  description String
  payType     PayType
  payValue    Decimal?
  currency    Currency      @default(RUB)
  city        City          @default(DERBENT)
  district    String?
  phone       String?
  urgentToday Boolean       @default(false)
  status      JobPostStatus @default(ACTIVE)
  expiresAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user        User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    Message[]
  promotions  ListingPromotion[]
  reviews     Review[]
  contactViews ContactView[]

  @@index([category])
  @@index([status])
  @@index([updatedAt])
  @@index([expiresAt])
}

model PaymentPlan {
  id           String   @id @default(cuid())
  name         String
  durationDays Int
  priceRub     Int
  isActive     Boolean  @default(true)

  promotions   ListingPromotion[]
}

model ListingPromotion {
  id            String   @id @default(cuid())
  listingId     String?
  jobPostId     String?
  paymentPlanId String
  startsAt      DateTime @default(now())
  endsAt        DateTime
  isDemo        Boolean  @default(true)
  createdAt     DateTime @default(now())

  listing       Listing?     @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost       JobPost?     @relation(fields: [jobPostId], references: [id], onDelete: Cascade)
  paymentPlan   PaymentPlan  @relation(fields: [paymentPlanId], references: [id])

  @@index([listingId])
  @@index([jobPostId])
  @@index([endsAt])
}

model Message {
  id            String   @id @default(cuid())
  listingId     String?
  jobPostId     String?
  senderName    String
  senderContact String
  text          String
  createdAt     DateTime @default(now())

  listing       Listing? @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost       JobPost? @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@index([jobPostId])
}

model Review {
  id             String   @id @default(cuid())
  executorUserId String
  employerUserId String
  jobPostId      String
  rating         Int
  text           String?
  createdAt      DateTime @default(now())

  executor       User     @relation("ExecutorReviews", fields: [executorUserId], references: [id], onDelete: Cascade)
  employer       User     @relation("EmployerReviews", fields: [employerUserId], references: [id], onDelete: Cascade)
  jobPost        JobPost  @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@unique([executorUserId, employerUserId, jobPostId])
  @@index([executorUserId, createdAt])
  @@index([jobPostId])
}

model ContactView {
  id          String            @id @default(cuid())
  viewerUserId String
  targetType  ContactTargetType
  listingId   String?
  jobPostId   String?
  createdAt   DateTime          @default(now())

  viewer      User              @relation(fields: [viewerUserId], references: [id], onDelete: Cascade)
  listing     Listing?          @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost     JobPost?          @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@index([viewerUserId])
  @@index([listingId])
  @@index([jobPostId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([sessionToken])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}
