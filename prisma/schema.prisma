generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  EXECUTOR
  EMPLOYER
  ADMIN
}

enum City {
  DERBENT
}

enum Gender {
  MALE
  FEMALE
}

enum PriceType {
  PER_SQM
  PER_HOUR
  FIXED
  NEGOTIABLE
}

enum PayType {
  PER_HOUR
  FIXED
  NEGOTIABLE
}

enum Currency {
  RUB
}

enum ListingStatus {
  ACTIVE
  PAUSED
}

enum JobPostStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

enum ContactTargetType {
  LISTING_EXECUTOR
  JOB_POST
}

enum TopUpStatus {
  PENDING
  APPROVED
  REJECTED
  EXPIRED
}

enum TariffKind {
  BASIC
  PREMIUM
  GOLD
}

enum ListingTariffStatus {
  ACTIVE
  EXPIRED
}

enum JobApplicationStatus {
  SENT
  VIEWED
  ACCEPTED
  REJECTED
  COMPLETED
  CANCELED
}

enum FavoriteTargetType {
  LISTING
  JOB
}

enum SavedSearchType {
  LISTING
  JOB
}

enum NotificationType {
  APPLICATION_NEW
  APPLICATION_STATUS_CHANGED
  TOPUP_APPROVED
  TOPUP_REJECTED
  PUBLICATION_EXPIRING
}

enum ReportTargetType {
  LISTING
  JOB
  USER
}

enum ReportStatus {
  OPEN
  RESOLVED
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(EMPLOYER)
  balanceRub    Int       @default(0)
  isBanned      Boolean   @default(false)
  bannedAt      DateTime?
  createdAt     DateTime  @default(now())

  accounts             Account[]
  sessions             Session[]
  profile              Profile?
  listings             Listing[]
  jobPosts             JobPost[]
  reviewsReceived      Review[]         @relation("ExecutorReviews")
  reviewsGiven         Review[]         @relation("EmployerReviews")
  contactViews         ContactView[]
  topUpRequests        TopUpRequest[]   @relation("TopUpOwner")
  approvedTopUps       TopUpRequest[]   @relation("TopUpApprover")
  sentApplications     JobApplication[] @relation("ExecutorApplications")
  employerApplications JobApplication[] @relation("EmployerApplications")
  favorites            Favorite[]
  savedSearches        SavedSearch[]
  notifications        Notification[]
  reportsFiled         Report[]         @relation("ReporterReports")
  reportsAgainst       Report[]         @relation("TargetUserReports")
  rateLimitLogs        RateLimitLog[]

  @@index([role])
  @@index([isBanned])
}

model Profile {
  id              String   @id @default(cuid())
  userId          String   @unique
  city            City     @default(DERBENT)
  about           String   @default("")
  gender          Gender?
  age             Int?
  workCategory    String?
  previousWork    String?
  experienceYears Int      @default(0)
  skills          String[]
  availability    String   @default("По договоренности")
  phone           String?
  isOnline        Boolean  @default(false)
  urgentToday     Boolean  @default(false)
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([workCategory])
  @@index([experienceYears])
}

model Listing {
  id          String        @id @default(cuid())
  userId      String
  title       String
  category    String
  description String
  priceType   PriceType
  priceValue  Decimal?
  currency    Currency      @default(RUB)
  status      ListingStatus @default(ACTIVE)
  city        City          @default(DERBENT)
  district    String?
  expiresAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  promotions   ListingPromotion[]
  tariffs      ListingTariff[]
  messages     Message[]
  contactViews ContactView[]
  favorites    Favorite[]
  reports      Report[]

  @@index([category])
  @@index([status])
  @@index([updatedAt])
  @@index([expiresAt])
}

model JobPost {
  id          String        @id @default(cuid())
  userId      String
  title       String
  category    String
  description String
  payType     PayType
  payValue    Decimal?
  currency    Currency      @default(RUB)
  city        City          @default(DERBENT)
  district    String?
  phone       String?
  urgentToday Boolean       @default(false)
  status      JobPostStatus @default(ACTIVE)
  expiresAt   DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user         User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages     Message[]
  promotions   ListingPromotion[]
  tariffs      ListingTariff[]
  reviews      Review[]
  contactViews ContactView[]
  applications JobApplication[]
  favorites    Favorite[]
  reports      Report[]

  @@index([category])
  @@index([status])
  @@index([updatedAt])
  @@index([expiresAt])
}

model PaymentPlan {
  id           String  @id @default(cuid())
  name         String
  durationDays Int
  priceRub     Int
  isActive     Boolean @default(true)

  promotions ListingPromotion[]
}

model ListingPromotion {
  id            String   @id @default(cuid())
  listingId     String?
  jobPostId     String?
  paymentPlanId String
  startsAt      DateTime @default(now())
  endsAt        DateTime
  isDemo        Boolean  @default(true)
  createdAt     DateTime @default(now())

  listing     Listing?    @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost     JobPost?    @relation(fields: [jobPostId], references: [id], onDelete: Cascade)
  paymentPlan PaymentPlan @relation(fields: [paymentPlanId], references: [id])

  @@index([listingId])
  @@index([jobPostId])
  @@index([endsAt])
}

model TariffPlan {
  id              String     @id @default(cuid())
  name            String
  priceRub        Int
  durationDays    Int
  kind            TariffKind
  discountPercent Int        @default(0)
  isActive        Boolean    @default(true)
  sortOrder       Int        @default(0)
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt

  listings ListingTariff[]

  @@index([kind, sortOrder])
}

model ListingTariff {
  id           String              @id @default(cuid())
  listingId    String?
  jobPostId    String?
  tariffPlanId String
  startsAt     DateTime            @default(now())
  endsAt       DateTime
  status       ListingTariffStatus @default(ACTIVE)
  createdAt    DateTime            @default(now())

  listing    Listing?   @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost    JobPost?   @relation(fields: [jobPostId], references: [id], onDelete: Cascade)
  tariffPlan TariffPlan @relation(fields: [tariffPlanId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@index([jobPostId])
  @@index([status, endsAt])
}

model TopUpRequest {
  id             String      @id @default(cuid())
  userId         String
  approverUserId String?
  amountRub      Int
  status         TopUpStatus @default(PENDING)
  proofText      String?
  adminNote      String?
  createdAt      DateTime    @default(now())
  expiresAt      DateTime
  updatedAt      DateTime    @updatedAt

  user     User  @relation("TopUpOwner", fields: [userId], references: [id], onDelete: Cascade)
  approver User? @relation("TopUpApprover", fields: [approverUserId], references: [id], onDelete: SetNull)

  @@index([userId, createdAt])
  @@index([status, expiresAt])
}

model AdminSettings {
  id            String   @id @default(cuid())
  bankName      String
  cardNumber    String?
  phoneNumber   String?
  recipientName String
  instructions  String
  updatedAt     DateTime @updatedAt
}

model Message {
  id            String   @id @default(cuid())
  listingId     String?
  jobPostId     String?
  senderName    String
  senderContact String
  text          String
  createdAt     DateTime @default(now())

  listing Listing? @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost JobPost? @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@index([listingId])
  @@index([jobPostId])
}

model Review {
  id             String   @id @default(cuid())
  executorUserId String
  employerUserId String
  jobPostId      String
  rating         Int
  text           String?
  createdAt      DateTime @default(now())

  executor User    @relation("ExecutorReviews", fields: [executorUserId], references: [id], onDelete: Cascade)
  employer User    @relation("EmployerReviews", fields: [employerUserId], references: [id], onDelete: Cascade)
  jobPost  JobPost @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@unique([executorUserId, employerUserId, jobPostId])
  @@index([executorUserId, createdAt])
  @@index([jobPostId])
}

model ContactView {
  id           String            @id @default(cuid())
  viewerUserId String
  targetType   ContactTargetType
  listingId    String?
  jobPostId    String?
  createdAt    DateTime          @default(now())

  viewer  User     @relation(fields: [viewerUserId], references: [id], onDelete: Cascade)
  listing Listing? @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost JobPost? @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@index([viewerUserId])
  @@index([listingId])
  @@index([jobPostId])
}

model JobApplication {
  id             String               @id @default(cuid())
  jobPostId      String
  executorUserId String
  employerUserId String
  status         JobApplicationStatus @default(SENT)
  message        String?
  createdAt      DateTime             @default(now())
  updatedAt      DateTime             @updatedAt

  jobPost  JobPost @relation(fields: [jobPostId], references: [id], onDelete: Cascade)
  executor User    @relation("ExecutorApplications", fields: [executorUserId], references: [id], onDelete: Cascade)
  employer User    @relation("EmployerApplications", fields: [employerUserId], references: [id], onDelete: Cascade)

  @@unique([jobPostId, executorUserId])
  @@index([employerUserId, status, updatedAt])
  @@index([executorUserId, status, updatedAt])
}

model Favorite {
  id         String             @id @default(cuid())
  userId     String
  targetType FavoriteTargetType
  listingId  String?
  jobPostId  String?
  createdAt  DateTime           @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  listing Listing? @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost JobPost? @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@unique([userId, listingId])
  @@unique([userId, jobPostId])
  @@index([userId, createdAt])
}

model SavedSearch {
  id          String          @id @default(cuid())
  userId      String
  type        SavedSearchType
  queryParams Json
  createdAt   DateTime        @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type, createdAt])
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType
  title     String
  body      String
  link      String?
  isRead    Boolean          @default(false)
  createdAt DateTime         @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, isRead, createdAt])
}

model Report {
  id             String           @id @default(cuid())
  reporterUserId String
  targetType     ReportTargetType
  listingId      String?
  jobPostId      String?
  targetUserId   String?
  reason         String
  text           String?
  status         ReportStatus     @default(OPEN)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  reporter   User     @relation("ReporterReports", fields: [reporterUserId], references: [id], onDelete: Cascade)
  targetUser User?    @relation("TargetUserReports", fields: [targetUserId], references: [id], onDelete: SetNull)
  listing    Listing? @relation(fields: [listingId], references: [id], onDelete: Cascade)
  jobPost    JobPost? @relation(fields: [jobPostId], references: [id], onDelete: Cascade)

  @@index([status, createdAt])
  @@index([reporterUserId, createdAt])
  @@index([targetUserId, createdAt])
  @@index([listingId])
  @@index([jobPostId])
}

model RateLimitLog {
  id          String   @id @default(cuid())
  userId      String?
  action      String
  key         String
  hits        Int
  windowStart DateTime
  createdAt   DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([action, key, createdAt])
  @@index([userId, createdAt])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([sessionToken])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}
